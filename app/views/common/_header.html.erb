<script>

$(document).ready(function() {
  $(document).mouseup(function(e) {
    $("#open-menu-profile").removeClass("active");
    $("#open-menu").removeClass("active");
    });
  });

$(document).ready(function() {
  $(window).scroll(function(){
      if ($(this).scrollTop() > 50) {
         $('.nft-header').addClass('color-white');
      } else {
         $('.nft-header').removeClass('color-white');
      }
  });
});


$(document).ready(function(){
  $("#menuToggle").click(function(){
    $("#menuToggle").toggleClass("hiden-list");
  });
});


$(document).ready(function(){
  $("#menuToggle").click(function(){
    $(".NFT_SCREEN_Header").toggleClass("hiden-list");
  });
});

$(document).ready(function(){
  $(".open-menu").click(function(){
    $("#open-menu").toggleClass("active");
  });
});

$(document).ready(function(){
  $(".open-menu-profile").click(function(){
    $("#open-menu-profile").toggleClass("active");
  });
});

$(document).ready(function(){
  $(".close-top-notify").click(function(){
    $(".NFT_SCREEN").addClass("close-nav");
  });
});
$(document).ready(function(){
  $(".close-top-notify").click(function(){
    $(".NFT_SCREEN_Header").addClass("close-nav");
  });
});
