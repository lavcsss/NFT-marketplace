<script>
   $(document).ready(function() {
     $(document).mouseup(function(e) {
       var container = $("#menuToggle");
       if (!container.is(e.target) 
         && container.has(e.target).length === 0) 
     {
       $("#open-menu-profile").removeClass("active");
       $("#open-menu").removeClass("active");
       $("#menuToggle").removeClass("hiden-list");
       $(".NFT_SCREEN_Header").removeClass("hiden-list");
       }
       });
       $('.header_nav').click(function(){
         window.location.href = "<%= root_path %>";
       })    
     });
   
   $(document).ready(function() {
     $(window).scroll(function(){
         if ($(this).scrollTop() > 50) {
            $('.nft-header').addClass('color-white');
         } else {
            $('.nft-header').removeClass('color-white');
         }
     });
   });
   
   
   $(document).ready(function(){
     $("#menuToggle").click(function(){
       if($(this).hasClass("hiden-list")){
         $("#menuToggle").removeClass("hiden-list")
         $(".NFT_SCREEN_Header").removeClass("hiden-list")
       }else{
         $("#menuToggle").addClass("hiden-list")
         $(".NFT_SCREEN_Header").addClass("hiden-list")
       }
     });
   });
   
   $(document).ready(function(){
     $(".open-menu").click(function(){
       $("#open-menu").toggleClass("active");
     });
   });
   
   $(document).ready(function(){
     $(".open-menu-profile").click(function(){
       $("#open-menu-profile").toggleClass("active");
     });
   });
   $(document).ready(function(){
     $(".close-top-notify").click(function(){
       $(".NFT_SCREEN").addClass("close-nav");
     });
   });
   $(document).ready(function(){
     $(".close-top-notify").click(function(){
       $(".NFT_SCREEN_Header").addClass("close-nav");
     });
   });
   
   
   $(document).ready(function(){
     $(".create-nft").click(function(){
       $("#create-collectible-modal").addClass("open-modal");
       $("body").addClass("open-modal")
     });
   });
   
   $(document).ready(function(){
     $(".close-icon").click(function(){
       $(".My_modal").removeClass("open-modal");
       $("body").removeClass("open-modal")
     });
    
   });

   
</script>
