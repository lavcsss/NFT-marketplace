<%unless blank==true%>
    <label class="radio-img">
        <%= radio_button_tag 'chooseOwnCollection', contract.address, nil, class: "chooseCollectionErc" %>
        <div class="image">
            <div class="icon-style-choose-collection">
                <%=image_tag contract.attachment_url, class: "img-responsive"%>
            </div>
            <div class="label-style-choose-collection">
            <label><%=contract.symbol%></label>
            </div>
            <div class="para-style-choose-collection">
            <p class="para-color"><%=contract.name%></p>
            </div>
        </div>
    </label>
<%else%>
    <label class="radio-img">
        <%= radio_button_tag 'chooseOwnCollection', 'new', true, class: "chooseCollectionErc" %>
        <div class="image">
            <div class="icon-style-choose-collection">
            <span>+</span>
            </div>
            <div class="label-style-choose-collection">
            <label>Own</label>
            </div>
            <div class="para-style-choose-collection">
            <p class="para-color">Contract</p>
            </div>
        </div>
    </label>
<%end%>