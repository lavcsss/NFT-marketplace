<div class="follow-step-block">
  <div class="follow-step-icon">
    <i class="allStart purchaseStart fa fa-check-circle grey"></i>
    <i class="allProgress purchaseProgress fa fa-spinner fa-pulse hide"></i>
    <i class="allDone purchaseDone fa fa-check-circle hide"></i>
    <i class="allRetry purchaseRetry fa fa-check-circle hide grey"></i>
  </div>
  <div class="follow-step-content">
    <h4><%= t('shared.purchase')%></h4>
    <p class="para-color"><%= t('shared.transaction_with_wallet')%></p>
  </div>
  <div class="follow-step-button">
    <a href="" class="allStart purchaseStart inProgress"  role="button">
      <%= t('shared.in_progress')%>
    </a>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function($) {
    $(document).on("click", ".inProgress", function (e) {
    toastr.success('Purchase succces.')
    window.location.href = '/collections/' + collectionId
    });
  });
</script>