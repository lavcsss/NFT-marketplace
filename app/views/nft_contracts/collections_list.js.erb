<% if params[:page_no].to_i > 1 %>
    $(".nft-collections").append('<%= j(render partial: 'collection_card', locals: {category_collections: @tokens}) %>');
<% else %>
    $(".nft-collections").html('<%= j(render partial: 'collection_card', locals: {category_collections: @tokens}) %>');
<% end %>

$(".collection-load-more").data("page-no", "<%= params[:page_no].to_i + 1 %>")

<% if params[:page_no].to_i == @tokens.total_pages %>
  $(".collection-load-more").closest(".row").hide()
<% end %>